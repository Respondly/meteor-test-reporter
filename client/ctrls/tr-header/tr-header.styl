@import 'test-runner.import'


.tr-header
  HEIGHT = 290px

  position relative
  background $TR_BLUE
  min-height HEIGHT
  font-family $TR_FONT_SANS
  color white

  *
    box-sizing border-box


  h1, h2
    font-family $TR_FONT_SANS
    font-weight 100
    margin 0
    padding 0


  h1
    font-size 42px
    line-height 44px
    padding-bottom 8px
    border-bottom solid 1px rgba(white, 0.2)


  .tr-center-width
    position relative
    margin 0 auto
    width 900px
    height HEIGHT


  .tr-title-outer
    abs-pos 0, 114, 0, null


  .tr-progress-bar
    background white
    abs-pos 0, null, null, 4px
    height 3px
    opacity 0.7


  .tr-version
    MARGIN = 8px
    abs-pos null, MARGIN, MARGIN, null
    color black
    opacity 0.2
    font-size 11px

