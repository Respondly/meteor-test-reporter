@import 'test-runner.import'


.tr-header
  HEIGHT = 290px
  position relative
  min-height HEIGHT
  font-family $TR_FONT_SANS
  color white
  background $TR_BLUE

  *
    box-sizing border-box

  h1, h2
    font-family $TR_FONT_SANS
    font-weight 100
    margin 0
    padding 0

  h1
    font-size 56px
    line-height 60px
    padding-bottom 8px
    border-bottom solid 1px rgba(white, 0.2)

  .tr-content-center
    height HEIGHT


  .tr-title-outer
    abs-pos 0, 100, 0, null
    .tr-title-right
      abs-pos null, null, 0, 7
      font-size 16px
      opacity 0.5


  .tr-progress-bar
    background white
    abs-pos 0, null, null, 4px
    height 3px
    opacity 0.7


  .tr-version
    MARGIN = 8px
    abs-pos null, MARGIN, MARGIN, null
    color black
    opacity 0.2
    font-size 11px


  .tr-tabs-outer
    abs-pos 0, null, 0, 0
    height 42px
    .tr-selection
      abs-pos 0, null, null, 0
      width 130px
      height 7px
      background $TR_PINK
      transition transform 0.2s //cubic-bezier(0.000, 0.000, 0.580, 1.000)

  // ------------------------------------------------------

  &.tr-has-failures
    background $TR_ORANGE
    .tr-tabs-outer
      .tr-selection
        background $TR_BLUE


